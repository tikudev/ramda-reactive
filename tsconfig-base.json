{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "source",
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["esnext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "source",
    "skipLibCheck": true,
    "strict": false,
    "traceResolution": false,
    "types": ["node"]
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "dist", "es", "src"],
  "include": ["source/index.js"]
}
